{% extends 'base.html.twig' %}

{% block body %}
    <h1>Trajet</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trajet.id }}</td>
            </tr>
            <tr>
                <th>Origine</th>
                <td>{{ trajet.origine }}</td>
            </tr>
            <tr>
                <th>Datedepart</th>
                <td>{% if trajet.dateDepart %}{{ trajet.dateDepart|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datearriveeprevue</th>
                <td>{% if trajet.dateArriveePrevue %}{{ trajet.dateArriveePrevue|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datearrivee</th>
                <td>{% if trajet.dateArrivee %}{{ trajet.dateArrivee|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Estactif</th>
                <td>{% if trajet.estActif %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Esteffectue</th>
                <td>{% if trajet.estEffectue %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('trajets_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('trajets_edit', { 'id': trajet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
